<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ateranS2.Vistas.vPrincipal"
             Title="vPrincipal">
    <VerticalStackLayout
        Spacing="25"
        Padding="20"
        >
        
       
        
        <Label 
            Text="Semana 2: Controles"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Blue"/>


        <Entry x:Name="txtDato1"
               Placeholder="Ingrese dato 1"
               Keyboard="Numeric"
               MaxLength="4"/>

        
        <Entry x:Name="txtDato2"
            Placeholder="Ingrese dato 2"
            Keyboard="Numeric"
            MaxLength="4"/>


        <Picker x:Name="pkCiudades" Title="Ciudades" >
            <Picker.Items >
                <x:String>Quito</x:String>
                <x:String>Guayaquil</x:String>
                <x:String>Cuenca</x:String>

            </Picker.Items>


        </Picker>

        <DatePicker x:Name="dpFecha" Format="MM/dd/yyyy">
            
        </DatePicker>
        

        <Button x:Name="btnCalculas" Text="Calcular" Clicked="btnCalculas_Clicked"/>

    </VerticalStackLayout>
</ContentPage>